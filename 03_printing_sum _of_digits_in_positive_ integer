#include <stdio.h>

int main() {
    int num, q, r;
    printf("Enter a number : ");
    scanf("%d" , &num);
    q = num;
    int sum = 0;
   while(q>0){
        r = q%10;
        //printf("%d\n", r);
        sum = 10*sum+r;
    q = q/10;
   }
    printf("The reverse number = %d",sum);
 return 0;
   }

//OUTPUT
Enter a number : 85731
The reverse number = 13758

=== Code Execution Successful ===
